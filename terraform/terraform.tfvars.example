# =============================================================================
# Terraform Variables - Example Configuration
# =============================================================================
# Purpose: Template for terraform.tfvars file
# Usage: 
#   1. Copy this file: cp terraform.tfvars.example terraform.tfvars
#   2. Update values below
#   3. NEVER commit terraform.tfvars to Git (it's in .gitignore)
# =============================================================================

# =============================================================================
# AWS Configuration
# =============================================================================

# AWS region where resources will be created
aws_region = "eu-west-1"

# Environment (dev, staging, or prod)
environment = "dev"

# Project owner
project_owner = "Your Name or Team"

# Git repository URL
git_repo_url = "https://github.com/celetrialprince166/Multi_Container_App"

# =============================================================================
# EC2 Instance Configuration
# =============================================================================

# Instance type (t3.small recommended for dev, t3.medium for production)
instance_type = "t3.small"

# Root volume size in GB (20 GB recommended minimum)
root_volume_size = 20

# Root volume type (gp3 is faster and cheaper than gp2)
root_volume_type = "gp3"

# Key pair is auto-generated by Terraform (TLS provider) - no manual setup needed

# Enable detailed CloudWatch monitoring (costs extra)
enable_monitoring = false

# =============================================================================
# Network Configuration
# =============================================================================

# CIDR blocks allowed to SSH (IMPORTANT: Restrict to your IP!)
# Find your IP: curl ifconfig.me
allowed_ssh_cidr = [
  "0.0.0.0/0"  # CHANGE THIS! Use "YOUR_IP/32" for security
]

# CIDR blocks allowed to access HTTP/HTTPS (usually open to public)
allowed_http_cidr = [
  "0.0.0.0/0"  # Allow from anywhere
]

# =============================================================================
# Application Configuration
# =============================================================================

# Directory where application will be deployed on EC2
app_directory = "/opt/notes-app"

# =============================================================================
# GitHub Configuration (for OIDC)
# =============================================================================

# Your GitHub organization or username
github_org = "celetrialprince166"

# Your GitHub repository name
github_repo = "Multi_Container_App"

# GitHub OIDC thumbprint (current value is correct, but verify if issues)
# See: https://github.blog/changelog/2022-01-13-github-actions-update-on-oidc-based-deployments-to-aws/
github_oidc_thumbprint = ["6938fd4d98bab03faadb97b34396831e3780aea1"]

# =============================================================================
# Additional Tags (Optional)
# =============================================================================

additional_tags = {
  # "CostCenter" = "Engineering"
  # "Department" = "DevOps"
  # "Backup"     = "Daily"
}

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. NEVER commit terraform.tfvars to Git
# 2. Restrict allowed_ssh_cidr to your IP only (e.g., "1.2.3.4/32")
# 3. SSH key is generated by Terraform - add to GitHub: terraform output -raw ec2_private_key
# 4. Review security group rules before applying
# 5. Enable encryption for sensitive data
# =============================================================================
