{
  "family": "notes-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "__EXECUTION_ROLE_ARN__",
  "taskRoleArn": "__TASK_ROLE_ARN__",
  "containerDefinitions": [
    {
      "name": "proxy",
      "image": "__PROXY_IMAGE__",
      "essential": true,
      "memory": 256,
      "dependsOn": [
        { "containerName": "backend", "condition": "HEALTHY" }
      ],
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "PROXY_PORT",
          "value": "80"
        },
        {
          "name": "NEXT_PUBLIC_API_URL",
          "value": "__NEXT_PUBLIC_API_URL__"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost/nginx-health || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 10
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/notes-app/ecs/proxy",
          "awslogs-region": "__AWS_REGION__",
          "awslogs-stream-prefix": "proxy"
        }
      }
    },
    {
      "name": "frontend",
      "image": "__FRONTEND_IMAGE__",
      "essential": true,
      "memory": 1024,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "HOSTNAME",
          "value": "0.0.0.0"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "NEXT_PUBLIC_API_URL",
          "value": "__NEXT_PUBLIC_API_URL__"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:3000 || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 5,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/notes-app/ecs/frontend",
          "awslogs-region": "__AWS_REGION__",
          "awslogs-stream-prefix": "frontend"
        }
      }
    },
    {
      "name": "backend",
      "image": "__BACKEND_IMAGE__",
      "essential": true,
      "memory": 1024,
      "dependsOn": [
        { "containerName": "database", "condition": "HEALTHY" }
      ],
      "portMappings": [
        {
          "containerPort": 3001,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3001" },
        { "name": "DB_HOST", "value": "localhost" },
        { "name": "DB_PORT", "value": "5432" },
        { "name": "DB_USERNAME", "value": "__DB_USERNAME__" },
        { "name": "DB_PASSWORD", "value": "__DB_PASSWORD__" },
        { "name": "DB_NAME", "value": "__DB_NAME__" },
        { "name": "DB_SSL", "value": "false" }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:3001/health || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 5,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/notes-app/ecs/backend",
          "awslogs-region": "__AWS_REGION__",
          "awslogs-stream-prefix": "backend"
        }
      }
    },
    {
      "name": "database",
      "image": "public.ecr.aws/docker/library/postgres:15-alpine",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "containerPort": 5432,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "POSTGRES_USER", "value": "__DB_USERNAME__" },
        { "name": "POSTGRES_PASSWORD", "value": "__DB_PASSWORD__" },
        { "name": "POSTGRES_DB", "value": "__DB_NAME__" }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "pg_isready -U __DB_USERNAME__ -d __DB_NAME__ || exit 1"],
        "interval": 10,
        "timeout": 5,
        "retries": 5,
        "startPeriod": 15
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/notes-app/ecs/backend",
          "awslogs-region": "__AWS_REGION__",
          "awslogs-stream-prefix": "database"
        }
      }
    }
  ]
}

